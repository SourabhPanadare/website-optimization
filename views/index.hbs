<div class="loading">Loading&#8230;</div>
<section id="homeBanner">
    <div id="bannerCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ul class="carousel-indicators">
        <li data-target="#bannerCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#bannerCarousel" data-slide-to="1"></li>
        <li data-target="#bannerCarousel" data-slide-to="2"></li>
        <li data-target="#bannerCarousel" data-slide-to="3"></li>
      </ul>

      <!-- The slideshow -->
      <div class="carousel-inner bg-info" role="listbox">
        <div class="carousel-item active">
          <picture>
            <source data-srcset="dist/images/back1-large.webp" type="image/webp">
            <source data-srcset="dist/images/back1-large.jpeg 960w, dist/images/back1-large@2x.jpeg 1920w" type="image/jpeg">
            <img class="w-100 lazyload" src="dist/images/back1-small.jpeg" data-src="dist/images/back1-large.jpeg 960w, dist/images/back1-large@2x.jpeg 1920w" alt="Background 1">
          </picture>
        </div>
        <div class="carousel-item">
          <picture>
            <source data-srcset="dist/images/back2-large.webp" type="image/webp">
            <source data-srcset="dist/images/back2-large.jpeg 960w, dist/images/back2-large@2x.jpeg 1920w" type="image/jpeg">
            <img class="w-100 lazyload" src="dist/images/back2-small.jpeg" data-src="dist/images/back2-large.jpeg 960w, dist/images/back2-large@2x.jpeg 1920w" alt="Background 2">
          </picture>
        </div>
        <div class="carousel-item">
          <picture>
            <source data-srcset="dist/images/back3-large.webp" type="image/webp">
            <source data-srcset="dist/images/back3-large.jpeg 960w, dist/images/back3-large@2x.jpeg 1920w" type="image/jpeg">
            <img class="w-100 lazyload" src="dist/images/back3-small.jpeg" data-src="dist/images/back3-large.jpeg 960w, dist/images/back3-large@2x.jpeg 1920w" alt="Background 3">
          </picture>
        </div>
        <div class="carousel-item">
          <picture>
            <source data-srcset="dist/images/back4-large.webp" type="image/webp">
            <source data-srcset="dist/images/back4-large.jpeg 960w, dist/images/back4-large@2x.jpeg 1920w" type="image/jpeg">
            <img class="w-100 lazyload" src="dist/images/back4-small.jpeg" data-src="dist/images/back4-large.jpeg 960w, dist/images/back4-large@2x.jpeg 1920w" alt="Background 4">
          </picture>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="carousel-control-prev" href="#bannerCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#bannerCarousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>

    </div>
    <section id="randomReceipe">
      <div class="container-fluid h-100">
        <div class="row h-100">
          <div class="col-lg-6 offset-lg-3 my-auto">
            <div class="jumbotron pt-0 pb-3">
              <h3 class="jumbtron-title text-white text-center font-italic display-4">Today's Special</h3>
              <div class="jumbotron-image">
                <picture>
                     <source class="" type="image/webp" srcset="http://sourabhportfolio.in/imageresize.php?img={{randomdetails.mealimage}}&w=700">
                     <img src="http://sourabhportfolio.in/imageresize.php?img={{randomdetails.mealimage}}&w=10" data-src="http://sourabhportfolio.in/imageresize.php?img={{randomdetails.mealimage}}&w=700" alt="today special" class="lazyload">
                </picture>
              </div>
              <h2 class="text-white text-center mt-3 jumbtron-name"><a href="/receipe/{{randomdetails.mealid}}" class="text-white">{{randomdetails.mealname}}</a></h2>
            </div>
          </div>
        </div>
      </div>
    </section>
</section>

<section id="homeContent">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-9 category-container">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="text-white mt-3 mb-3">Categories</h3>
          </div>
        </div>
        <div class="row category-scroll">
          {{#each categorydetails}}
          <div class="col-lg-4">
            <a href="/categories/{{categoryname}}" class="btn mb-4 p-0 w-100">
              <div class="card text-muted bg-dark home-category">
                  <picture>
                       <source class="card-img-top" type="image/webp" srcset="http://sourabhportfolio.in/imageresize.php?img={{categoryimage}}&w=320">
                       <img src="http://sourabhportfolio.in/imageresize.php?img={{categoryimage}}&w=10" data-src="http://sourabhportfolio.in/imageresize.php?img={{categoryimage}}&w=320" alt="categories" class="card-img-top lazyload">
                  </picture>
                  <div class="card-body">
                     <h5 class="card-title text-center">{{categoryname}}</h5>
                  </div>
              </div>
            </a>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-lg-3 latest-container">
        <div class="row">
          <div class="col-lg-12">
            <h3 class="text-white mt-3 mb-3">Latest Recipes</h3>
          </div>
        </div>
        <div class="row latest-scroll">
          <div class="col-lg-12">
            {{#each latestdetails}}
            <div class="media mb-3">
              <div class="media-img mr-3">
                <picture>
                     <source class="card-img-top" type="image/webp" srcset="http://sourabhportfolio.in/imageresize.php?img={{latestimage}}&w=150">
                     <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" data-src="http://sourabhportfolio.in/imageresize.php?img={{latestimage}}&w=150" alt="categories" class="card-img-top lazyload">
                </picture>
                <!-- <img src="{{latestimage}}" class="align-self-start" style="width:100px" alt="latest receipe"> -->
              </div>
              <div class="media-body">
                <p class="text-warning mt-0 mb-1 text-uppercase">{{latestcategory}}</p>
                <a href="/receipe/{{latestid}}"><h5 class="text-white">{{latestname}}</h5></a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

